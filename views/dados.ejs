<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- GRÁFICO DE PH -->

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const ctx = document.getElementById('myChartPH').getContext('2d');
    const phSensorData = <%- JSON.stringify(ph) %>;
    
    // Extrair e formatar o dia do sensor de pH
    const dataLabels = phSensorData.map(entry => {
      const date = new Date(entry.data);
      return date.getDate();
    });

    const dataValues = phSensorData.map(entry => entry.valor);

    new Chart(ctx, {
      type: 'line',
      data: {
        labels: dataLabels,
        datasets: [{
          label: 'pH',
          data: dataValues,
          borderColor: 'rgba(75, 192, 192, 1)',
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          borderWidth: 2,
          tension: 0.1,
          fill: true // Preencher a área abaixo da linha
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            display: true,
            position: 'top',
          },
          title: {
            display: true,
            text: 'Níveis de pH ao longo dos dias'
          }
        },
        scales: {
          x: {
            display: true,
            title: {
              display: true,
              text: 'Dia'
            }
          },
          y: {
            display: true,
            beginAtZero: true,
            title: {
              display: true,
              text: 'Valor do pH'
            }
          }
        }
      }
    });
  });
</script>

